<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotpassword">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_inner"
        android:layout_width="411dp"
        android:layout_height="255dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/royalblue"

        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="159dp">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="331dp"
                android:layout_height="45dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="32dp"
                android:gravity="center"
                android:text="Reset Account Password"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/backbuttonforgot"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/backbuttonforgot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="52dp"
                app:layout_constraintEnd_toStartOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="596dp"
        android:layout_gravity="center"
        android:layout_marginEnd="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="49dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="Please Enter your valid Email address and click on &quot;Reset&quot; button below to change password"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/forgotemail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/forgotemail"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginStart="57dp"

                android:layout_marginTop="49dp"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="369dp"
                android:background="@drawable/customedittext"
                android:drawableStart="@drawable/usernamepng"
                android:drawablePadding="10dp"
                android:elevation="3dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:maxEms="10"
                android:paddingStart="10dp"

                android:textColor="#4169e1"
                android:textColorHint="#4169e1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:ignore="DuplicateClickableBoundsCheck" />

            <Button
                android:id="@+id/btn_resetpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="161dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="161dp"
                android:layout_marginBottom="240dp"
                android:background="@drawable/custombutton"
                android:text="Reset"
                android:textAllCaps="false"
                android:textColor="#FFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forgotemail" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>